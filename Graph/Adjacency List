Undirected Graph -->

class Graph {
public:
    vector<vector<int>> adj;
    int n;
    
    Graph(int n){
        this->n = n;
        adj.resize(n);
    }
    
    void addEdge(int u, int v){
        adj[u].push_back(v);
        adj[v].push_back(u);
    }
};


Directed Graph -->

class Graph {
public:
    vector<vector<int>> adj;
    int n;
    
    Graph(int n){
        this->n = n;
        adj.resize(n);
    }
    
    void addEdge(int u, int v){
        adj[u].push_back(v);
    }
};
